<% include partials/header %>

<div class="container mx-auto w-5">
  <h1>Edit</h1>
  <form action="/books/<%=book._id%>?_method=PUT" method="POST">

    <div class="form-group row">
      <label for="bookName" class="col-sm-2 col-form-label">Book Name</label>
      <div class="col-sm-10">
        <input 
          class="form-control" type="text" 
          name="bookName" value="<%= book.bookName %>">
      </div>
    </div>

    <div class="form-group row">
      <label for="price" class="col-sm-2 col-form-label">Price</label>
      <div class="col-sm-10">
        <input 
          class="form-control" type="number" 
          name="price" value="<%= book.price %>">
      </div>
    </div>

    <div class="form-group row">
      <label for="quantity" class="col-sm-2 col-form-label">Quantity</label>
      <div class="col-sm-10">
        <input 
          class="form-control" type="number" 
          name="quantity" value="<%= book.quantity %>">
      </div>
    </div>







      <button class="btn btn-outline-primary">Update</button>
  </form>
</div>



